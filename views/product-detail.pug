extends layout

block content
    h1= product.name
    p $ #{product.price}
    p size: #{product.size}
    p
        img.image(src=product.image_path width='100px' height='100px')
    p 
        a(href='/products/product-edit/'+product.id) Edit Product
    p 
        a(href='/products/product-delete/'+product.id) Delete Product
    p 
        a(href='/products') Products List